<div class="container mt-5">
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Libro a modificar</h3>
        </div>
       <div class="card-body">
           <form action="/books/edit-form/{{this._id}}" method="POST">
           <div class="form-group">
           <input type="text" name="titulo" class="form-control" value="{{this.titulo}}">
           </div>
           <div class="form-group">
               <input type="text" name="autor" class="form-control" value="{{this.autor}}">
           </div>
            <div class="form-group">
               <input type="text" name="genero" class="form-control" value="{{this.genero}}">
           </div>
           <div class="form-group">
               <input type="text" name="opinion" class="form-control" value="{{this.opinion}}">
           </div>
           <div class="form-group">
               <input type="text-area" name="trama" class="form-control" value="{{this.trama}}">
           </div>
           <div class="form-group">
               <button class="btn btn-primary btn-block" type="submit">
                   Guardar
               </button>
           </div>
           </form>
       </div>
       </div>